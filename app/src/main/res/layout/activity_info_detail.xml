<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/background_color"/>

            <ImageView
                android:id="@+id/bannerImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/banner"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/background_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="基本信息"
                    android:textColor="@color/text_balak"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓        名"
                        android:textColor="@color/txt_black_gray_color"
                        android:textSize="14sp"/>


                    <EditText
                        android:id="@+id/infoNameEdiTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/gray_line_shape"
                        android:hint="例如：某某"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:text="唐均"
                        android:textColor="@color/txt_black_gray_color"
                        android:textColorHint="@color/txt_gray_color"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="出生年月"
                        android:textColor="@color/txt_black_gray_color"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/infoBirthEdiTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/gray_line_shape"
                        android:hint="例如：1990-10-18"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:text="1990-9-28"
                        android:textColor="@color/txt_black_gray_color"
                        android:textColorHint="@color/txt_gray_color"
                        android:textSize="14sp"/>
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="认证信息"
                    android:textColor="@color/text_balak"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证件"
                        android:textColor="@color/txt_black_gray_color"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/infoIdCardEdiTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/gray_line_shape"
                        android:hint="例如：320199009185916"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:text="320199009185916"
                        android:textColor="@color/txt_black_gray_color"
                        android:textColorHint="@color/txt_gray_color"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号码"
                        android:textColor="@color/txt_black_gray_color"
                        android:textSize="14sp"/>


                    <EditText
                        android:id="@+id/infoIphoneEdiTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/gray_line_shape"
                        android:hint="例如：13382825231"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:text="13382825231"
                        android:textColor="@color/txt_black_gray_color"
                        android:textColorHint="@color/txt_gray_color"
                        android:textSize="14sp"/>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="高级认证"
                    android:textColor="@color/text_balak"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="单位名称"
                        android:textColor="@color/txt_black_gray_color"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/infoPtcEdiTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/gray_line_shape"
                        android:hint="例如：南京某软件信息技术有限公司"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:text="南京某软件信息技术有限公司"
                        android:textColor="@color/txt_black_gray_color"
                        android:textColorHint="@color/txt_gray_color"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地        址"
                        android:textColor="@color/txt_black_gray_color"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/infoAddressEdiTxt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/gray_line_shape"
                        android:hint="例如：南京雨花台区银杏山庄"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:text="南京雨花台区银杏山庄"
                        android:textColor="@color/txt_black_gray_color"
                        android:textColorHint="@color/txt_gray_color"
                        android:textSize="14sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:gravity="center"
                    android:paddingBottom="5dp">

                    <Button
                        android:id="@+id/updateBtn"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_solid_btn_shape"
                        android:text="提   交"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
