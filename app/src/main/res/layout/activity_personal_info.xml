<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <RelativeLayout
        android:id="@+id/headRLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:scaleType="fitXY"
            android:src="@mipmap/bgmy"/>

        <cn.yaohl.MayorOnline.util.view.RoundImageView
            android:id="@+id/headIV"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/usericon_bg_circle"
            android:src="@mipmap/default_head"
            />

        <TextView
            android:id="@+id/mobileTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/headIV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="13351975925"
            android:textColor="@color/text_balak"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobileTxt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="南京用户xxxx61"
            android:textColor="@color/text_balak"
            android:textSize="12sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_bg_shape"
        android:orientation="vertical">


        <TextView
            android:id="@+id/myAnswerTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/toright"
            android:paddingBottom="12dp"
            android:paddingLeft="9dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:text="我的回复"
            android:textColor="@color/text_balak"
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginRight="10dp"
            android:background="@color/line_color"/>

        <TextView
            android:id="@+id/myHistoryTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/toright"
            android:paddingBottom="12dp"
            android:paddingLeft="9dp"
            android:paddingRight="8dp"
            android:paddingTop="12dp"
            android:text="查看历史"
            android:textColor="@color/text_balak"
            android:textSize="16sp"
            />
    </LinearLayout>
</LinearLayout>
