<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity">

    <LinearLayout
        android:id="@+id/ll_success_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/iv_pay_result"
            android:layout_marginTop="30dp"
            android:src="@mipmap/pay_success"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/tv_resultword_success"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交成功"
            android:textSize="16sp"
            android:textColor="@color/txt_333"
            />
        <TextView
            android:id="@+id/tv_resultword2_success"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="离成功开通会员还差一步，工作人员将在3个工作日内完成审核，请耐心等待"
            android:textSize="14sp"
            android:textColor="@color/txt_666"
            />
        <TextView
            android:id="@+id/tv_return_success"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:text="返回"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_associator_power"
            />
    </LinearLayout>
</LinearLayout>
